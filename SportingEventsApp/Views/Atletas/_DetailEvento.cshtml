@model SportingEventsApp.Models.Atleta

@{
    var evento = new SportingEventsApp.Models.Evento();

    if (Model.Evento != null)
    {
        evento = Model.Evento;
    }
}
<div>
    <h4>Evento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">ID:</dt>
        <dd class = "col-sm-10">@evento.Id</dd>

        <dt class = "col-sm-2">Evento:</dt>
        <dd class = "col-sm-10">@evento.Titulo</dd>

        <dt class = "col-sm-2">Data:</dt>
        <dd class = "col-sm-10">@evento.Data</dd>

        <dt class = "col-sm-2">Modalidade:</dt>
        <dd class = "col-sm-10">@evento.Modalidade</dd>

        <dt class = "col-sm-2">Total de Participantes:</dt>
        <dd class = "col-sm-10">@evento.TotalParticipantes</dd>
        
        <dt class = "col-sm-2">Local:</dt>
        <dd class = "col-sm-10">@evento.Local</dd>
        
        <dt class = "col-sm-2">Data:</dt>
        <dd class = "col-sm-10">@evento.Data</dd>

    </dl>
</div>